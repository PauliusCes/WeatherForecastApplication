<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="lt.paulius.weatherforecastapplication.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_forecastFragment"
            app:destination="@id/forecastFragment">
            <argument
                android:name="currentTemperature"
                android:defaultValue="5"
                app:argType="integer" />
            <argument
                android:name="windSpeed"
                android:defaultValue="0"
                app:argType="integer" />
            <argument
                android:name="cityName"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/forecastFragment"
        android:name="lt.paulius.weatherforecastapplication.ForecastFragment"
        android:label="fragment_forecast"
        tools:layout="@layout/fragment_forecast">
        <argument
            android:name="currentTemperature"
            android:defaultValue="5"
            app:argType="integer" />
        <argument
            android:name="windSpeed"
            android:defaultValue="0"
            app:argType="integer" />
        <argument
            android:name="cityName"
            app:argType="string" />
    </fragment>
</navigation>